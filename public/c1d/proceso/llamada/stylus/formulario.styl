.Formulario
	margin 3em auto
	max-width 800px
	text-align center
	&__box
		border-radius 5px
		background-color white
		padding-bottom 3em
	&__tittle
		h1
			color white
			border-radius 4px 4px 0 0 
			font-size 2.2em
			padding .5em 0
			background-color #40DCAA
		h2
			display inline-block
			font-size 1.5em
			margin 1em 0
			width 85%
	&__o 
		font-size 3em
	&__tema2
		margin-top 2em
		.numero2
			vertical-align top
			display inline-block
			width 40px
			height 40px
			border-radius 50%
			line-height 2
			background-color black
			p 
				font-size 1.3em
				color white
		h2
			display inline-block
			font-size 1.5em
			width 85%
		h3
			margin 1em 0

.numero
	vertical-align top
	display inline-block
	margin-top 1em
	margin-left 1em
	width 40px
	height 40px
	border-radius 50%
	line-height 2
	background-color black
	p 
		font-size 1.3em
		color white
		

form 
	width 80%	
	margin 0 auto		

label
	margin .5em 0
	width 100%
	display block	
	font-size 1.3em	
	text-align left	
input
	font-size 1em
	border 1px solid #9f9f9f
	border-radius 6px
	margin-bottom 1em
	padding 1em .5em
	width 100%
	display block
	
.btn_send
	cursor pointer
	margin-top 2em
	font-weight bold
	border none
	padding .7em 0
	background-color #2980B9
	color white
	font-size 1.2em
	border-bottom 4px solid #1A5276
	&:hover
		border-bottom 4px solid #21618C 
		background-color #3498DB 
	
	