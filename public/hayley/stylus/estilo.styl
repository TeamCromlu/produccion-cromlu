// codigo de jalar otros stylus
@import 'nib'
// paleta de colores
.img
	width 70px
	border-radius 50%

marron_back=#fff0ff;
*
	margin 0
	padding 0
html
	font-size 16px
	font-family 'Open Sans' sans-serif arial
.header
	width 100%
	background-color #003763
	position fixed
	&__mob
		height 88px
		display block 
		.mob__avatar
			position absolute
			display inline-block
			margin 0.5em				
		.mob__icon
			display inline-block
			float right
			a 
				font-weight bold
				color white
				text-decoration none
				font-size 1.5em
				display block 
				padding 1em 0.5em
	&__desktop
		.desktop__avatar
			display none
			margin 0.5em
		.desktop__nav
			left -100%
			height auto
			position fixed
			width 100%
			background-color #003763
			text-align center
			.nav__ul
				list-style none
				.nav__li
					border-bottom 1px solid white
					a
						padding 0.6em 0
						display block
						font-weight bold
						text-decoration none
						color white
						font-size 1.5em
					:hover
						background-color #0F101F
