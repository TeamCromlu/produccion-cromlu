.sec_art
	color white
	padding 7em 0
	text-align center
	height auto
	background-color #0a263a
	background url("../image/wallpaper.jpg") 
	background-repeat no-repeat
	background-size cover
	article
		padding 0
		margin auto	
		figure
			margin 1em 0
			display inline-block
			img
				width 280px
				border-radius 50%
		div
			h1
				font-size 3em
				margin 0 0 0.2em 0
			h2
				font-size 1.5em
.sec_about
	height auto
	text-align center
	color white
	background-color #09608C
	padding 10em 0
	article
		div
			font-weight bold
			h2
				font-size 4em
				margin 0 0 0.5em 0
			p
				text-align justify
				font-size 1.5em
				margin 0 0 0.5em 0
		figure
			margin 0
			img
				width 280px
				border-radius 50%
.sec_clip
	height auto
	text-align center
	background-color #49C5AE
	color white
	padding 7em 0
	div
		h2
			font-size 3em
			
		p
			text-align justify
			font-size 1.5em
			margin .5em 0 .5em 0
			
	.clip_art
		.art_content
			h3
				margin 1em 0 0.5em 0 
				font-size 2em
			figure
				img
					width 98%
					height auto
.sec_contact
	text-align center
	background-color peru
	padding 8em 0
	&_box
		.contact_text
			h2
				color #011D3C
				font-size 3em
			h3
				margin 1em 0
				color #2B2B2B
				font-size 2em
			p
				text-align center
				font-size 1.5em
				color #0F101F
		.contact_network
			margin 1.5em 0 0 0
			a
				img
					margin 0 0.5em
					width 60px	
					border-radius 10%		
footer
	text-align center
	padding 3em
	background-color #003763
	color white	


@media screen and (min-width 945px)

	.header
		&__mob
			display none
		&__desktop
			.desktop__avatar
				float left
				display inline-block
			.desktop__nav
				height 93px
				position initial
				.nav__ul
					.nav__li
						width 20%
						display inline-block
						border-bottom none
						:hover
							border-bottom 4px solid aqua
						a
							border-bottom: 4px solid #003763;
							line-height 2.5
@media screen and (min-width 650px)
	.sec_clip
		div
			p
				text-align center
				
	.sec_contact
		padding 5em 0
		&_box
			.contact_text
				h2
					font-size 5em
				
@media screen and (min-width 945px)
	.sec_about
		article
			text-align center
			width 80%
			margin 0 auto
			div
				display inline-block
				width 650px
				h2
					margin 0 0 1em 0
			figure
				display inline-block
				margin 1em
@media screen and (min-width 415px)
	.sec_clip
		.clip_art
			display inline-block
			margin auto
			.art_content
				figure
					margin auto
					width 400px