.video
	height 0
	padding-bottom 56.25%
	position relative
	overflow hidden
	
iframe,
object,
embed,
video
	width 100%
	height 100%
	position absolute
	right 0
	left 0

.Learn
	border-bottom 8px dashed rgba(0, 110, 189, 0.82)
	padding 2em 0
	&__text
		padding 0 1em
		h2
			font-size 2.5em
			margin-bottom .5em
		p 
			font-size 1.2em
	&__box
		width 100%
	&__video
		margin-bottom 1em
		display inline-block
		width 100%
		height auto
	&__videoBox
		margin 2em auto
		width 80%
			