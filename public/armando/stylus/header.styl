.Header 
	padding-top 2em
	&__box
		text-align center
	&__avatar
		img
			width 90%
			max-width 250px
			border-radius 50%
	&__title
		margin 1em 0
	&__nombre
		font-size 2em
		margin-bottom .23em
		color white
	&__p
		color white
	&__twitter
		color white
	&__nav
		width 100%
	&__link
		width 100%
	&__a 
		font-size 1.6em
		padding .5em
		display block
		text-decoration none
		color white
		transition 0.15s
		&:hover
			color #00144C
			background-color white
			

.Footer-Main
	&__box
		text-align center
		color white
		a 
			text-decoration none
			color #FFC800
		