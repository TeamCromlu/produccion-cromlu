.Contact
	padding 2em 1em
	&__text
		h2
			margin-bottom .5em
			font-size 2.5em
		p
			font-size 1.2em
	&__form
		border-radius 10px
		margin 2em auto
		padding 2em 2em 1em 2em
		background rgba(64, 77, 113, 0.35)
		width 80%
		form
			label
				font-size 1.5em
				display block
			input
				border-radius 4px
				border none
				text-decoration none 
				box-sizing border-box
				margin .5em auto 1.5em auto
				display block
				width 100%
				padding .7em .4em
			.Btn-enviar
				text-decoration none 
				font-size 1.4em
				font-weight bold
				background-color #003A6C
				border-bottom 4px solid #00144C
				color white
				&:hover
					cursor pointer 
					background-color #3498DB
					border-bottom 4px solid #21618C
				